<!doctype html>
<html>
  <head>
    <title>Book Trader</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Mukta+Mahee" rel="stylesheet">
    <link href="/public/css/books.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    <div class="smallFrame">
      <div class="smallPage">
        <h1><span class="fa fa-compass"></span> Settings</h1>
        <a href="/searchBooks" class="btn btn-default btn-sm">Search books</a>
        <a href="/myBooks" class="btn btn-default btn-sm">My books</a>
        <a href="/myRequestsAndBorrowings" class="btn btn-default btn-sm">My Requests/Borrowings</a>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
        <a href="/password" class="btn btn-default btn-sm">Change Password</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <div class="smallFormBox">
          <h3><span class="fa fa-user"></span> <%= user.local.username %></h3>
          <div style="color: red">All fields compulsory</div>
          <br>
          <form action="/settings" method="post">
            <div class="form-group">
              <label>First Name</label>
              <!-- input field attribute 'value' must be in quotes or else white space isn't handled properly -->
              <input type="text" name="firstName" value="<%= user.local.firstName %>" >
            </div>
            <div class="form-group">
              <label>Last Name</label>
              <input type="text" name="lastName" value="<%= user.local.lastName %>" >
            </div>
            <div class="form-group">
              <label>City</label>
              <input type="text" name="city" value="<%= user.local.city %>" >
            </div>
            <div class="form-group">
              <label>State</label>
              <input type="text" name="state" value="<%= user.local.state %>" >
            </div>
            <div class="form-group">
              <label>Country</label>
              <input type="text" name="country" value="<%= user.local.country %>" >
            </div>
            <div class="form-group">
              <label>Contact Email (shown when requesting, lending and borrowing)</label>
              <input type="text" name="email" value="<%= user.local.email %>" >
            </div>
            <div class="form-group" style="display: none"> // not displayed as field only required to send 'username' so passport can be used
              <label>Username</label>
              <input type="text" name="username" value="<%= user.local.username %>" >
            </div>
            <div class="form-group" style="display: none"> // not displayed as field only required to send 'password' so passport can be used
              <label>Password</label>
              <input type="text" name="password" value="<%= user.local.password %>" >
            </div>
            <button type="submit" class="btn btn-warning">Save</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
